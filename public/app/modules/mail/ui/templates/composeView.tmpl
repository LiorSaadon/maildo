<div class="composeView">
    <div class="compose-header">
        <div class="field">
            <div class="label">{{#_i18n}}mail.composeview.to{{/_i18n}}</div>
            <div class="inputbox"><div class="toInputWrapper"></div></div>
        </div>
        <div class="field ccLine">
            <div class="label">{{#_i18n}}mail.composeview.cc{{/_i18n}}</div>
            <div class="inputbox"><div class="ccInputWrapper"></div></div>
        </div>
        <div class=field>
            <div class="label">{{#_i18n}}mail.composeview.subject{{/_i18n}}</div>
            <div class="inputbox inputbox1"><input type="text" class="subject" value={{subject}}></input></div>
        </div>
    </div>
    <div class="compose-editor" contenteditable="true">{{body}}
    </div>
    <a href="javascript:void(0)" class="button sendBtn">Send</span></a>
    <a class="closeX"></a>
</div>