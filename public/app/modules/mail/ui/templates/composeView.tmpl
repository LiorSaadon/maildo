<div class="composeView">
    <div class="compose-header">
        <div class="field">
            <div class="label">{{#_i18n}}mail.composeview.to{{/_i18n}}</div>
            <div class="inputbox toInputWrapper"></div>
        </div>
        <div class="field ccLine" style="display:none">
            <div class="label">{{#_i18n}}mail.composeview.cc{{/_i18n}}</div>
            <div class="inputbox ccInputWrapper"></div>
        </div>
        <div class="field bccLine" style="display:none">
            <div class="label">{{#_i18n}}mail.composeview.bcc{{/_i18n}}</div>
            <div class="inputbox bccInputWrapper"></div>
        </div>
        <div class="field-options">
            <span class="link addCc">{{#_i18n}}mail.composeview.addcc{{/_i18n}}</span>
            <span  class="link addBcc">{{#_i18n}}mail.composeview.addBcc{{/_i18n}}</span>
        </div>
        <div class=field>
            <div class="label">{{#_i18n}}mail.composeview.subject{{/_i18n}}</div>
            <div class="inputbox"><input type="text" class="subject" value={{subject}}></input></div>
        </div>
    </div>
    <div class="compose-editor" contenteditable="true">{{body}}
    </div>
</div>