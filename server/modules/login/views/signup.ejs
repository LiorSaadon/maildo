<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Signup</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <style>
        .header{

            background: #205081;
            padding-top:2px;
            padding-bottom:2px;
            PADDING-LEFT:30px;
            margin-top:2px;
            margin-bottom:100px;
            border:1px solid green;
            font-size:25px;
            color:white;
        }
    </style>
</head>
<body>
<div class="container">

    <div class="header">Maildo</div>

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- show any messages that come back with authentication -->
         <div class="alert alert-danger <%= message.length > 0 ? '' : 'hide' %>"><%= message %></div>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control email" name="email" maxlength="50" placeholder="userName@maildo.com">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control password" name="password" maxlength="15">
            </div>

            <button type="submit" class="btn btn-warning btn-lg"  onclick="return validate();">Signup</button>
        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>
    </div>
</div>

<script>
    function validate() {

        var email = $(".email").val();
        var reg = /^[a-zA-Z0-9_.+-]+@maildo.com$/
        if (!reg.test(email)){
            $(".alert-danger").removeClass("hide").html("Email address invalid");
            return false;
        }

        var password = $(".password")[0].val();
        if (passport.length == 0){
            $(".alert-danger").removeClass("hide").html("Password can be empty");
            return false;
        }
    }
</script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</body>
</html>